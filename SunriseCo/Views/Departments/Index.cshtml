@* Departments Page *@

@model IEnumerable<Department>

<h1 style="background-color: cyan; color:maroon" class="text-center">   
    This Departments Index Page
</h1>

<a asp-controller="Departments" asp-action="Create" class="btn btn-success mb-2">Create New</a>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Position</th>
                <th>More...</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="Departments" asp-action="GetDetailsView" asp-route-id=@item.Id class="btn btn-success">
                            Details
                        </a>
                        <a asp-controller="Departments" asp-action="GetEditView" asp-route-id=@item.Id class="btn btn-primary">
                            Edit
                        </a>
                        <a asp-controller="Departments" asp-action="GetDeleteView" asp-route-id=@item.Id class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    //<div ></div>
    <h1  class="alert alert-danger text-white text-center">
        !! There is no data yet !!
    </h1>
}

<br />
<a asp-controller="Home" asp-action="Index" class="btn btn-success">Back Home</a>