@* Delete Page *@


@model Department

<h1 class="alert alert-danger text-center" style="color:darkred">
    Are you sure that you want to delete this department ?
</h1>


<dl class="row">
    <dt class="col-1">Id</dt>
    <dd class="col-11">@Model.Id</dd>

    <dt class="col-1">Name</dt>
    <dd class="col-11">@Model.Name</dd>

    <dt class="col-1">Description</dt>
    <dd class="col-11">@Model.Description</dd>
</dl>

<form method="post" asp-controller="Departments" asp-action="DeleteDepartment">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger mb-2">Delete</button>
</form>

<a asp-controller="Departments" asp-action="GetIndexView" class="btn btn-success">Back To Departments</a>